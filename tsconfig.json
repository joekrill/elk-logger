{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/types/*",
                "node_modules/*"
            ]
        },
        "lib": [
            "es2015",
            "es2016",
            "es2017"
        ],
        "strict": true
    },
    "include": [
        "src/**/*"
    ]
}